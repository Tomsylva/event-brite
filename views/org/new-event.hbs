<h1>Create a new Event</h1>
<h2>Organization: {{name}}</h2>

<form action="/organization/{{orgId}}/create" method="POST">
  <input type="text" name="name" placeholder="Event name">
  <input type="datetime-local" name="date">
  <input type="text" name="venue" placeholder="Venue" required>
  <input type="number" name="maxAttendees" placeholder="Number of Attendees" min="0">
  <input type="text" name="fee" placeholder="Fee">
  <input type="text" name="description" placeholder="Description" min="20">
  <button type="submit">Create Event</button>
</form>